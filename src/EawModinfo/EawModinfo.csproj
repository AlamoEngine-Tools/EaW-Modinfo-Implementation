<Project Sdk="Microsoft.NET.Sdk">

	<PropertyGroup>
		<PackageId>eaw.modinfo</PackageId>
		<Description>Reference implementation of the eaw.modinfo specification which is located at https://github.com/AlamoEngine-Tools/eaw.modinfo</Description>
	</PropertyGroup>

	<PropertyGroup>
		<TargetFrameworks>netstandard2.0;netstandard2.1;net5.0</TargetFrameworks>
		<AssemblyName>Eaw.Modinfo</AssemblyName>
		<Nullable>enable</Nullable>
		<EnableNETAnalyzers>true</EnableNETAnalyzers>
	</PropertyGroup>

	<PropertyGroup>
		<IncludeSymbols>true</IncludeSymbols>
		<SymbolPackageFormat>snupkg</SymbolPackageFormat>
		<TreatWarningsAsErrors>true</TreatWarningsAsErrors>
		<GenerateDocumentationFile>true</GenerateDocumentationFile>
		<InheritDocEnabled>true</InheritDocEnabled>
	</PropertyGroup>

	<ItemGroup>
		<PackageReference Include="Newtonsoft.Json" Version="13.0.1" />
		<PackageReference Include="NJsonSchema" Version="10.6.6" />
		<PackageReference Include="SemanticVersioning" Version="2.0.0" />
		<PackageReference Include="System.IO.Abstractions" Version="17.0.15" />
		<PackageReference Include="System.Text.Json" Version="6.0.1" />
		<PackageReference Include="Validation" Version="2.5.42" />
	</ItemGroup>

</Project>
